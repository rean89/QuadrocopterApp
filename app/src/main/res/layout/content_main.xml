<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="false">


    <!--<VideoView-->
        <!--android:id="@+id/vv_main_video"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->


    <GridLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="180dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="24dp"
        android:background="#11000000"
        android:columnCount="4"
        android:rowCount="5">

        <TextView
            android:id="@+id/tv_height_label"
            style="@style/tv_overlays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Height:" />

        <TextView
            android:id="@+id/tv_height_data"
            style="@style/tv_overlays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="DATA" />

        <TextView
            android:id="@+id/tv_latitude_label"
            style="@style/tv_overlays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Latitude:" />


        <TextView
            android:id="@+id/tv_latitude_data"
            style="@style/tv_overlays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="DATA" />

        <TextView
            android:id="@+id/tv_longitude_label"
            style="@style/tv_overlays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Longitude:" />

        <TextView
            android:id="@+id/tv_longitude_data"
            style="@style/tv_overlays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:text="DATA" />


    </GridLayout>
</android.support.constraint.ConstraintLayout>