<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:paddingBottom="@dimen/activity_horizontal_spacing"
    android:paddingEnd="@dimen/activity_horizontal_spacing"
    android:paddingStart="@dimen/activity_vertical_spacing"
    android:paddingTop="@dimen/activity_horizontal_spacing"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tv_navigation_drawer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/navigation_drawer_title"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/primary_text_dark_nodisable"/>

    <TextView
        android:id="@+id/tv_navigation_drawer_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_spacing"
        android:text="@string/navigation_drawer_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_navigation_drawer_title"
        android:textColor="@android:color/primary_text_dark_nodisable"/>
</android.support.constraint.ConstraintLayout>